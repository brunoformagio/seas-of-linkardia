{
  "name": "seas-of-linkardia",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "npx hardhat test",
    "test:unit": "npx hardhat test test/SeasOfLinkardia.test.js",
    "test:integration": "npx hardhat test test/SeasOfLinkardia.integration.test.js",
    "test:gas": "npx hardhat test test/SeasOfLinkardia.gas.test.js",
    "test:all": "npx hardhat test test/SeasOfLinkardia*.test.js",
    "test:coverage": "npx hardhat coverage",
    "test:watch": "npx hardhat test --watch",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js",
    "deploy:localhost": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "npx hardhat run scripts/deploy.js --network etherlinkTestnet",
    "deploy:mainnet": "npx hardhat run scripts/deploy.js --network etherlinkMainnet",
    "setup:localhost": "npm run deploy:localhost && npx hardhat run scripts/authorize-contracts.js --network localhost",
    "setup:testnet": "npm run deploy:testnet && npx hardhat run scripts/authorize-contracts.js --network etherlinkTestnet",
    "verify:testnet": "npx hardhat verify --network etherlinkTestnet",
    "verify:mainnet": "npx hardhat verify --network etherlinkMainnet"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@thirdweb-dev/react": "^4.9.4",
    "@thirdweb-dev/sdk": "^4.0.99",
    "@thirdweb-dev/wallets": "2.4.12",
    "@typechain/ethers-v6": "^0.5.1",
    "dotenv": "^16.5.0",
    "framer-motion": "^12.18.1",
    "next": "15.3.2",
    "react": "^19.0.0",
    "react-confetti-explosion": "^3.0.2",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.4",
    "thirdweb": "^5.92.1",
    "typechain": "^8.3.2",
    "viem": "^2.23.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@tailwindcss/postcss": "^4",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "ethers": "^6.14.1",
    "hardhat": "^2.19.5",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.1",
    "tailwindcss": "^4",
    "typechain": "^8.3.0",
    "typescript": "^5"
  }
}
